<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DatHanhThanhCongActivity">
    <TextView
        android:id="@+id/txtdangnhap"
        android:text="Cảm ơn bạn đã mua hàng"
        android:textSize="30sp"
        android:textColor="@color/colortext"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="#C319E1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>



    <ImageView
        android:id="@+id/imgthank"
        android:src="@drawable/tim"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtdangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgtim"
        android:src="@drawable/thcnk"
        app:layout_constraintTop_toBottomOf="@id/imgthank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/imgtim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Xem "
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtxemdonhang"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-2dp"
            android:text="đơn hàng "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1BC62C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Quay lại "
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtquaylaitrangchu"
            android:layout_marginLeft="5dp"
            android:text="trang chủ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="-2dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>