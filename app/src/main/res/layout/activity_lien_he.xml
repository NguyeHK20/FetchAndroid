<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F9"
    tools:context=".activity.LienHeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarlienhe"
        app:title="Liên hệ"
        android:background="#C319E1"
        app:layout_constraintTop_toTopOf ="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/toolbarlienhe"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="  Email : kula0118@gmail.com"
            android:textColor="#D52D0F"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/email"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#DDB8B8"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:text="  SDT : 0786542895"
            android:textColor="#D52D0F"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/phone"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:text="  Website : http://congan.hochiminhcity.gov.vn/wps/portal/Home/trang-chu "
            android:textColor="#D52D0F"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/web"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:text="   Địa chỉ : wwwwww"
            android:textColor="#D52D0F"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/map"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <ImageView
            android:id="@+id/map"
            android:layout_marginTop="-130dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mapimg" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>